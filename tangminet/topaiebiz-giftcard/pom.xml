<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- 表示当前项目采用的POM模型版本是4.0.0。 -->
	<modelVersion>4.0.0</modelVersion>

	<!-- 表示topaiebiz-giftcard项目是topaiebiz-parent项目的子项目或模块。 -->
	<parent>
		<groupId>com.topaiebiz</groupId>
		<artifactId>topaiebiz-parent</artifactId>
		<version>2.0.0-SNAPSHOT</version>
	</parent>

	<!-- topaiebiz-giftcard项目的基础信息。 -->
	<artifactId>topaiebiz-giftcard</artifactId>
	<name>topaiebiz-giftcard</name>
	<description>Topaiebiz智能电子商务平台的子平台 - 礼卡管理平台。</description>

	<!-- topaiebiz-giftcard项目的依赖库列表。 -->
	<dependencies>
		<!-- Nebula PaaS软件快速研发平台SSM基础框架的快速启动器，以Spring Boot, MyBatis, MyBatis Plus, 
			Alibaba Druid等技术为基础构建。 -->
		<dependency>
			<groupId>com.nebulapaas</groupId>
			<artifactId>nebula-paas-ssmyb-sysmgt</artifactId>
		</dependency>
		<!-- 关系型数据库MySQL的JDBC连接驱动的依赖库。 -->
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>card-service-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>member-service-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>basic-service-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>system-service-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>promotion-service-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>topaiebiz-SMS</artifactId>
		</dependency>
		<dependency>
			<groupId>com.topaiebiz</groupId>
			<artifactId>topaiebiz-merchant</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<version>1.5.2.RELEASE</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<!-- topaiebiz-giftcard项目的构建配置信息。 -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>